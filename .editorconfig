# https://editorconfig.org/

root = true

[*]
end_of_line = lf
charset = utf-8
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 80

# 2 space indentation
[*.{json,yml,html,css,scss,sass}]
indent_size = 2

[*.{md,rst}]
trim_trailing_whitespace = false
indent_size = 2
